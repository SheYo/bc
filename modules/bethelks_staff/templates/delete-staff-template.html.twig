<table>
  <thead>
    <tr>
      <th colspan="5">Are you sure you want to delete this member?</th>
    </tr>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Category</th>
      <th>Position</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{{ staff.sid }}</td>
      <td>{{ staff.name | title }}</td>
      <td>{{ staff.staff_category | replace({'_':' '}) | title }}</td>
      <td>{{ staff.position | title }}</td>
      <td>{{ staff.email }}</td>
    </tr>
  </tbody>
</table>

<a href="confirmDelete/{{ staff.sid }}"><button class="button button-action button--primary">Confirm Delete</button></a>
