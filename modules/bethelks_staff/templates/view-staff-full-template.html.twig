<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Position</th>
      <th>Email</th>
      <th>View</th>
    </tr>
  </thead>
  <tbody>
    {% if staff is empty %}
      <tr>
        <td colspan="8">There are no staff members to display.</td>
      </tr>
    {% else %}
      {% for member in staff %}
        <tr>
          <td>{{ member.name | title }}</td>
          <td>{{ member.staff_category | replace({'_':' '}) | title }}</td>
          <td>{{ member.position | title }}</td>
          <td>{{ member.email }}</td>
          <td><a href="/faculty/view/{{ member.sid }}">View</a></td>
        </tr>
      {% endfor %}
    {% endif %}
  </tbody>
</table>
