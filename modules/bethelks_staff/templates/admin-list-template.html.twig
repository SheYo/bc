<a href="./bethelks_staff/add"><button style="margin-bottom:10px;" class="button button-action button--primary">Add Staff</button></a>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Category</th>
      <th>Position</th>
      <th>Email</th>
      <th>View</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    {% if staff is empty %}
      <tr>
        <td colspan="8">There are no staff members in the database.</td>
      </tr>
    {% else %}
      {% for member in staff %}
        <tr>
          <td>{{ member.sid }}</td>
          <td>{{ member.name | title }}</td>
          <td>{{ member.staff_category | replace({'_':' '}) | title }}</td>
          <td>{{ member.position | title }}</td>
          <td>{{ member.email }}</td>
          <td><a href="/faculty/view/{{ member.sid }}">View</a></td>
          <td><a href="bethelks_staff/edit/{{ member.sid }}">Edit</a></td>
          <td><a style="color:red;" href="bethelks_staff/delete/{{ member.sid }}">Delete</a></td>
        </tr>
      {% endfor %}
    {% endif %}
  </tbody>
</table>
