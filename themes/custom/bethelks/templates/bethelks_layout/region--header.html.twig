<!-- <div class="container-fluid header-thresherConnectBar d-flex justify-content-center justify-content-sm-end"> -->
<div class="container-fluid header-thresherConnectBar d-flex justify-content-end">
  <a href="#">Thresher Connect</a>
</div>
<nav class="navbar navbar-expand-lg navbar-light">
  {{ content }}
</nav>

{% if is_front %}
  <div class="container-fluid header-eyecatcher">
    <!-- <div class="header-eyecatcher-video-overlay">
      <p>Click anywhere on the video to pause/play.</p>
    </div> -->

    <div class="header-eyecatcher-video">
      <video autoplay loop muted>
        <source src="{{ directory ~ '/VideoHeader.mp4' }}" type="video/mp4">
      </video>
    </div>
  </div>
{% else %}
  {% if '/article/' in url %}
      <!-- Do nothing on article pages -->
  {% else %}
    {% if '/about/' in url %}
      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-about">
    {% elseif '/admissions/' in url %}
      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-admissions">
    {% elseif '/academics/' in url %}
      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-academics">
    {% elseif '/affordability/' in url %}
      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-affordability">
    {% elseif '/student-life/' in url %}
      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-student-life">
    {% elseif '/thresher-success/' in url %}
      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-thresher-success">
    {% else %}
      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-default">
    {% endif %}
    <!-- <div that comes from above> -->
      <div class="container">
        <div class="header-eyecatcher-overlay d-flex justify-content-center justify-content-md-start align-items-center">
          <div class="row">
            <div class="col-12"><h2>Connect to Purpose</h2></div>
            <!--<div class="col-12"><a href="#">Explore</a></div>-->
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endif %}
