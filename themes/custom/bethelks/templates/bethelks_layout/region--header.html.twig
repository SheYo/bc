      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-donors">
    {% elseif '/community' in url %}
      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-community">
    {% elseif '/fine-arts' in url %}
      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-fine-arts">
    {% elseif '/news-events' in url %}
      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-news-events">
    {% else %}
      <div class="container-fluid header-eyecatcher header-eyecatcher-image header-eyecatcher-image-default">
    {% endif %}
      <div class="row d-flex justify-content-start align-items-end">
        <div class="col-12 mb-5">
          <img class="img-fluid" src="/{{ directory ~ "/images/connectToPurpose.png" }}" alt="Connect To Purpose">
        </div>
      </div>
    </div>
  {% endif %}
{% endif %}

